[
    /**
     * To make a joypad work, first type in rhio:
     *
     * pad
     *
     * This will dump you all the events from your joypad. You can then write
     * a json file in your ~/.rhio/ directory.
     * This is an example.
     */


    /**
     * Here, the button number 3 will toggle the enabled variable. It will be
     * set to 1 on the first push, then 0 and so.
     */
    {
        "param": "/moves/walk/var/enabled",
        "type": "toggle",
        "number": 3
    },

    /**
     * The axis 1 will set step in the range 38 to -38
     */
    {
        "param": "/moves/walk/var/step",
        "type": "axis",
        "number": 1,
        "range": [38, -38]
    },
    {
        "param": "/moves/walk/var/lateral",
        "type": "axis",
        "number": 0,
        "range": [20, -20]
    },
    {
        "param": "/moves/walk/var/turn",
        "type": "axis",
        "number": 2,
        "range": [20, -20]
    },

    /**
     * Pressing the button 4 will increment the frequency, and
     * pressing the button 6 will decrement it.
     */
    {
        "param": "/moves/walk/freq",
        "type": "increment",
        "number": 4,
        "step": 0.1
    },
    {
        "param": "/moves/walk/freq",
        "type": "decrement",
        "number": 6,
        "step": 0.1
    },

    /**
     * When the button 10 will be pressed, the kickLeft will be set to 1, and
     * to 0 when it will be released
     */
    {
        "param": "/moves/walk/var/kickLeft",
        "type": "button",
        "number": 10
    },
    {
        "param": "/moves/walk/var/kickRight",
        "type": "button",
        "number": 11
    },
    {
        "param": "/moves/walk/riseGain",
        "type": "increment",
        "number": 5,
        "step": 0.002
    },
    {
        "param": "/moves/walk/riseGain",
        "type": "decrement",
        "number": 7,
        "step": 0.002
    }
]
