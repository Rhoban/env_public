// Require existence of the following external filters
// human (BGR image)
// greenII (Integral Image)
// integralY (Integral Image)
[
    {
        "class name" : "RoiToPatches",
        "content" : {
            "name" : "roiPatchProvider",
            "dependencies" : ["human", "roiRandomizer"],
            "paramInts" : {
                "patchHeight" : 32,
                "patchWidth" : 32
            }
        }
    },
    {
        "class name" : "ROIRandomizer",
        "content" : {
            "name" : "roiRandomizer",
            "dependencies" : ["ballByII"],
            "paramInts" : {
                "maxROI" : 8,
                "maxROIPerInput" : 4
            }
        }
    },
    {
        "class name" : "BallByII",
        "content" : {
//            "display" : true,
            "name" : "ballByII",
            "dependencies" : ["integralY","greenII","ballRadiusProvider"],
            "paramInts" : {
                "decimationRate" : 4,
                "maxRois" : 8,
                "useLocalSearch" : 1
            },
            "paramFloats" :
            {
                "boundaryFactor" : 2.2,
                "yWeight" : 1.0,
                "greenWeight" : 2.0,
                "minScore" : 30,
                "minRadius" : 10
            }
        }
    },
    {
        "class name" : "BallRadiusProvider",
        "content" : {
            "name" : "ballRadiusProvider",
            "dependencies" : ["source"]
        }
    }
]
